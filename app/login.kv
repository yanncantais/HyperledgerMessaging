#:include connected.kv
#:include chat_page.kv
<Login>:
	
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 30
		Button:
			text: 'Back to home'
			font_size: 20
			size_hint: 0.3, 1
			on_press: root.do_home()
        Label:
            text: 'Login'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Login'
                font_size: 18
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 22
				size_hint: 1, 3

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 22
				size_hint: 1, 3
				
		BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Port'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: port
                multiline:False
                font_size: 22
				size_hint: 1, 3

        Button:
            text: 'Connection'
            font_size: 24

            on_press: root.do_login(login.text, password.text, port.text)
			
		Label:
			id: success_label
            text: ''
            font_size: 15
			
			
<SignUp>:
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 30
		Button:
			text: 'Back to home'
			font_size: 20
			size_hint: 0.3, 1
			on_press: root.do_home()
        Label:
            text: 'Sign Up'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Login'
                font_size: 18
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 22
				size_hint: 1, 3

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 22
				size_hint: 1, 3

        Button:
