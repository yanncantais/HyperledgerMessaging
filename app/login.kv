            on_press: root.do_sign(login.text, password.text)
			
		Label:
			id: success_label
            text: ''
            font_size: 15
			
			
<Home>
	BoxLayout
		orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 30
		Label:
            text: 'HyperledgerMessaging'
            font_size: 28
		Button:
            text: 'Login'
            font_size: 24

            on_press: root.login()
        Button:
            text: 'Sign Up'
            font_size: 24

            on_press: root.sign_up()
			
